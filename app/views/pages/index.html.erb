<div id="con">
	
<div class="container-fluid p-3 bg-dark text-white">
	<h1 align="center">My Test Application</h1>
	<%= link_to("<Home>",:controller=>'access',:action=>'menu')%>
	<%= link_to("<Back to Subject>",subjects_path)%>	
		<div class="container admin_color" align="right">Logged in as :<%=session[:username]%>  </div>

</div>
<div>
	<%= link_to("create_new_page",new_page_path(:subject_id=>@subject.id))%>
</div>
<div class="container">
<h3 align="center" >Manage Page for Subject <%= @subject.name %></h3>
</div>
<div class="container">
	<table class="table table-hover">
		<thead>
		  <tr>
		  		
		  		<th>Page</th>
		  		<th>Position</th>
		  		<th>Permalink</th>
		  		<th>Visible</th>
		  		<th>Sections</th>
		  		<th> </th>
		  		
		  </tr>	
		</thead>
		  <% @pages.each do |page|%>
		  <tr>
		  		
		  		<td><%=page.name%></td>
		  		<td><%=page.position%></td>
		  		<td><%=page.permalink%></td>
		  		<td><%= status_tag(page.visible)%></td>
		  		<td><%=page.section.size%></td>
		  		<td>
		  			<%=link_to("View Sections",sections_path(:page_id=>page.id))%>
		  			<%=link_to("Show",page_path(page,:subject_id=>@subject.id))%>
		  			<%=link_to("Edit",edit_page_path(page,:subject_id=>@subject.id))%>
		  			<%=link_to("Delete",delete_page_path(page,:subject_id=>@subject.id))%>
		  		</td>
		  </tr>
		  <%end%>
		</table>	
</div>
<%= will_paginate @pages %>
<footer id="footer">
  <div id="footer-content foo">c.nibi123@gmail.com</div>
</footer>
</div>
